<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.b5400.statki.MainActivity"
    android:orientation="horizontal"
    android:background="@drawable/background">

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:backgroundTint="#80003399"
        android:text="Nowa Gra"
        android:textStyle="bold"
        android:textSize="100px"
        android:textColor="#CCFFFF"/>

    <Button
        android:id="@+id/b_instrukcja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button"
        android:layout_marginTop="11dp"
        android:backgroundTint="#80003399"
        android:onClick="klikinstrukcja"
        android:text="Instrukcja"
        android:textColor="#CCFFFF"
        android:textSize="100px"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:layout_marginStart="22dp"
        android:text="Version: 0 . 1 . 0"
        android:textColor="#00CCFF" />
</RelativeLayout>
